/* pages/loan/loan.wxss */
.aika-img{
  width: 100%;
}
.aika-img image {
    width: 100%;
}
.header-list {
  display: block;
  overflow: hidden;
  padding: 36rpx 0;
}
.list-con {
  float: left;
  width: 230rpx;
  text-align: center;
  border-right: 1px solid #eeeff3;
  box-sizing: border-box;
  padding: 22rpx 0;
}
.list-con .h-title {
    display: block;
    color: #353535;
    font-size: 28rpx;
    font-weight: 500;
}
.list-con:last-child{
  border-right: 1px solid transparent;
}
.list-con .span-text {
    display: block;
    color: #888888;
    font-size: 22rpx;
}
.use-content{
  overflow: hidden;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0px 0px 30rpx rgba(0,0,0,0.08);
}
.use-content >.h-title{
  display: block;
  font-size: 34rpx;
  color: #353535;
  padding: 34rpx 30rpx;
  border-bottom: 1px solid #eeeff3;
  font-weight: 500;
}
.use-detail{
  display: flex;
  justify-content: space-between;
  padding: 56rpx 30rpx;
}
.use-detail .detail-con{
  text-align: center;
}
.use-detail .detail-con image{
  width: 84rpx;
  height: 84rpx;
}
.use-detail .detail-con .h5-title{
  display: block;
  font-size: 28rpx;
  color: #353535;
  padding-top: 16rpx;
  font-weight: 500;
}
.use-detail .detail-con .h5-text{
  display: block;
  font-size: 22rpx;
  color: #888888;
  padding: 0 20rpx;
}
.merchants {
  padding-top: 42rpx;
  overflow: hidden;
}
.merchants .h5-title{
  display: block;
  color: #353535;
  font-size: 34rpx;
  padding: 30rpx;
  border-top: 1px solid #eeeff3;
  font-weight: 500;
}
.choose-option {
  border-top: 1px solid #eeeff3;
  border-bottom: 1px solid #eeeff3;
  padding: 34rpx 60rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
}
.choose-option .choose-title{
  display:flex;
  justify-content:center;
  align-items:center;
  width: 296rpx;
  padding: 18rpx 0;
  text-align: center;
  border-radius: 50px;
  border: 1px solid #eeeff3;
  font-size: 28rpx;
  color: #353535;
  background-color: #fff;
}
.choose-title icon{
  display: flex; 
  font-size: 30rpx;
  margin-left: 3rpx;
  align-items:center;
}
.icon-uparrow{
  display: none !important;
}
.choose-active .icon-uparrow{
  display: flex !important;
}
.choose-active .icon-downarrow{
  display: none;
}
.choose-option .choose-active {
  color: #fe8e8c;
  border-color: #fe8e8c;
}
.choose-content{
  display: none;
  padding: 26rpx 30rpx;
  background-color: #fff;
  border-bottom: 1px solid #eeeff3;
}
.choose-content.state-active{
  display: block;
}
.choose-content .choose-list{
  overflow: hidden;
  padding: 4rpx 30rpx;
  display: none;
}
.choose-content .choose-list text{
  float: left;
  position: relative;
  width: 25%;
  border: 1rpx solid #eeeff3;
  padding: 16rpx 0;
  text-align: center;
  box-sizing: border-box;
  background-color: #fff;
  font-size: 22rpx;
  margin-left: -1rpx;
  margin-top: -1rpx;
}
.choose-content .choose-list.state-active {
    display: block;
}
.choose-content .choose-list text.active {
    color: #fe8e8c;
    border-color: #fe8e8c;
    z-index: 9;
}
.mer-list{
  overflow: hidden;
  padding: 0 30rpx;
}
.list-conts{
  display: inline-block;
  width: 100%;
  background-color: #fff;
  border-radius: 10px;
  margin-top: 18rpx;
  box-shadow: 0px 0px 16px rgba(0,0,0,0.08);
  overflow: hidden;
}
.list-conts navigator{
  display: flex;
  padding: 50rpx 0;
}
.mer-header{
  float: left;
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  border-radius: 50%;
  margin-left: 30rpx;
  align-self: center;
}
.mer-header >image {
  width: 100%;
  height: 120rpx;
}
.per-info {
  float: left;
  align-self: center;
  width: 356rpx;
  margin-left: 20rpx;
  overflow: hidden;
}
.per-info .per-title{
  display: block;
  font-size: 28rpx;
  color: #353535;
  font-weight: 500;
}
.per-info .per-text{
  display: block;
  width: 92%;
  font-size: 22rpx;
  color: #888888;
  padding-top: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.distance{
  float: right;
  border-left: 1px solid #eeeff3;
  box-sizing: border-box;
  text-align: center;
  padding: 0 35rpx;
  align-self: center;
}
.distance >image {
  display: inline-block;
  width: 33rpx;
  height: 42rpx;
}
.distance >text {
  display: block;
  font-size: 28rpx;
  color: #595757;
}
.none-content {
  display: block;
  padding: 60rpx 0;
  font-size: 26rpx;
  color: #b1b0b0;
  background-color: #f9f9fb;
  text-align: center;
}